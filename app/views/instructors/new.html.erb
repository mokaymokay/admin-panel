<% @page_title = "Add Instructor" %>

<%= bootstrap_form_for @instructor do |f| %>
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
    <%= f.number_field :age, max: 149 %>
    <%= f.number_field :salary, min: 1 %>
    <%= f.select :degree, ['HS', 'College', 'Masters', 'PhD'] %>
    <%= f.fields_for :profile do |p| %>
      <%= p.text_field :username %>
      <%= p.password_field :password %>
    <% end %>
    <%= f.submit %>
<% end %>
