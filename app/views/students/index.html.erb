<% @page_title = "Students" %>

<div class="container-fluid">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
    <li class="breadcrumb-item active"><%= @page_title %></li>
  </ol>
  <div class="row">
    <div class="col-12">

      <%= render "shared/flash" %>

      <%= render partial: "shared/table_heading", locals: { body: "Add New Student", url: new_student_path } %>

      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Degree</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody id="all_students">
          <% @students.each do |student| %>
            <%= render student %>
          <% end %>
        </tbody>
      </table>
      <br>

      <div id="student-form" style="display: none">
      </div>

    </div>
  </div>
</div>
