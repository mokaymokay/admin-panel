<% @page_title = "Students" %>

<h4><%= @page_title %></h4>

<%= link_to("Add New Student", new_student_path, :class => "btn btn-outline-primary btn-sm") %>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Age</th>
      <th>Degree</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
    <tr>
      <td><%= student.id %></td>
      <td><%= student.first_name %></td>
      <td><%= student.last_name %></td>
      <td><%= student.age %></td>
      <td><%= student.degree %></td>
      <td><%= link_to("Details", student_path(student), :class => 'btn btn-outline-primary btn-sm') %></td>
      <td><%= link_to("Edit", edit_student_path(student), :class => 'btn btn-outline-warning btn-sm') %></td>
      <td><%= link_to "Delete", student_path(student), :method => :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-danger btn-sm' %></td>
      </form>
    </tr>
    <% end %>
  </tbody>
</table>
