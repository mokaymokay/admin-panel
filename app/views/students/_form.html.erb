<% @page_title = "Add Student" %>

<div class="container-fluid">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="<%= students_path %>">Students</a></li>
    <li class="breadcrumb-item active"><%= @page_title %></li>
  </ol>
  <div class="row">
    <div class="col-12">

      <%= bootstrap_form_for @student, remote: true do |f| %>
          <%= f.text_field :first_name %>
          <%= f.text_field :last_name %>
          <%= f.number_field :age, max: 149 %>
          <%= f.select :degree, ['HS', 'College', 'Masters', 'PhD'] %>
          <%= f.submit "Add Student", class: "btn btn-outline-success" %>
      <% end %>

    </div>
  </div>
</div>
