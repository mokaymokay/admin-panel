<% @page_title = "Add Cohort" %>

<%= bootstrap_form_for @cohort, :url => course_cohorts_path do |f| %>
    <%= f.text_field :name %>
    <%= f.date_field :start_date %>
    <%= f.date_field :end_date %>
    <%= f.collection_select(:instructor_id, Instructor.all, :id, :full_name, prompt: true) %>
    <%= f.hidden_field :course_id, value: params[:course_id] %>
    <%= f.submit %>
<% end %>
