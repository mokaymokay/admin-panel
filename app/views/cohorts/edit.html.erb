<% @page_title = "Edit Cohort" %>

<%= bootstrap_form_for @cohort, :url => course_cohort_path do |f| %>
    <%= f.text_field :name, value: @cohort.name %>
    <%= f.date_field :start_date, value: @cohort.start_date %>
    <%= f.date_field :end_date, value: @cohort.end_date %>
    <%= f.collection_select(:instructor_id, Instructor.all, :id, :last_name, prompt: true) %>
    <%= f.hidden_field :course_id, value: params[:course_id] %>
    <%= f.submit %>
<% end %>

<%= link_to "Delete", course_cohort_path(@cohort.course, @cohort), :method => :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-danger btn-sm' %>
