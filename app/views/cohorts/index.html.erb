<% @page_title = "Cohorts" %>

<h4><%= @page_title %></h4>

<%= link_to("Add New Cohort", new_course_cohort_path, :class => "btn btn-outline-success btn-sm") %>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Instructor</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cohorts.each do |cohort| %>
    <tr>
      <td><%= cohort.id %></td>
      <td><%= cohort.name %></td>
      <td><%= cohort.start_date %></td>
      <td><%= cohort.end_date %></td>
      <td><%= cohort.instructor.full_name %></td>
      <td><%= link_to("Details", course_cohort_path(cohort.course, cohort), :class => 'btn btn-outline-primary btn-sm') %></td>
      <td><%= link_to("Edit", edit_course_cohort_path(cohort.course, cohort), :class => 'btn btn-outline-info btn-sm') %></td>
      <td><%= link_to "Delete", course_cohort_path(cohort.course, cohort), :method => :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-danger btn-sm' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
