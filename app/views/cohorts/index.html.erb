<% @page_title = "Cohorts" %>

<%= render "shared/flash" %>

<%= render partial: "shared/table_heading", :locals => { :body => 'Add New Cohort', :url => new_course_cohort_path } %>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Instructor</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cohorts.each do |cohort| %>
    <tr>
      <td><%= cohort.id %></td>
      <td><%= cohort.name %></td>
      <td><%= cohort.start_date %></td>
      <td><%= cohort.end_date %></td>
      <td><%= cohort.instructor.full_name %></td>
      <td><%= link_to("Details", course_cohort_path(cohort.course, cohort), :class => 'btn btn-outline-primary btn-sm') %></td>
      <td><%= link_to("Edit", edit_course_cohort_path(cohort.course, cohort), :class => 'btn btn-outline-warning btn-sm') %></td>
      <td><%= link_to "Delete", course_cohort_path(cohort.course, cohort), :method => :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-danger btn-sm' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
