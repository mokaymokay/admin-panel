<% @page_title = "Admins" %>

<div class="container-fluid">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
    <li class="breadcrumb-item active"><%= @page_title %></li>
  </ol>
  <div class="row">
    <div class="col-12">

      <%= render "shared/flash" %>

      <%= render partial: "shared/table_heading", :locals => { :body => 'Add New Admin', :url => new_admin_path } %>

      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @admins.each do |admin| %>
          <tr>
            <td><%= admin.id %></td>
            <td><%= admin.first_name %></td>
            <td><%= admin.last_name %></td>
            <td><%= admin.user.email %></td>
            <td><%= link_to("Edit", edit_admin_path(admin), :class => 'btn btn-outline-warning btn-sm') %></td>
            <td><%= link_to "Delete", admin_path(admin), :method => :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-danger btn-sm' %></td>
            </form>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
