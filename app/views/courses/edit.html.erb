<% @page_title = "Edit Course" %>

<div class="container-fluid">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="<%= courses_path %>">Courses</a></li>
    <li class="breadcrumb-item active"><%= @page_title %></li>
  </ol>
  <div class="row">
    <div class="col-12">

      <%= bootstrap_form_for @course do |f| %>
          <%= f.text_field :name %>
          <%= f.number_field :hours %>
          <%= f.submit "Update", class: "btn btn-outline-warning" %>
          <%= link_to 'Delete', course_path(@course), :method => :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger float-right' %>
      <% end %>

    </div>
  </div>
</div>
