<% @page_title = "Edit Course" %>

<%= bootstrap_form_for @course do |f| %>
    <%= f.text_field :name %>
    <%= f.number_field :hours %>
    <%= f.submit "Update", class: "btn btn-outline-info" %>
    <%= link_to 'Delete', course_path(@course), :method => :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger float-right' %>
<% end %>
